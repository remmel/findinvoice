{% extends 'base.html.twig' %}

{% block title %}FindInvoice / Weboob{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <form method="post">
            <div class="form-group">
                <label for="bank">Bank</label>
                <select id="bank" class="form-control" name="bank">
                    {% for b in banks %}
                        {% if b.region is defined %}
                            {% for k,v in b.region %}
                                <option value="{{ b.code }}/{{ k }}">{{ b.label }} - {{ v }}</option>
                            {% endfor %}
                        {% else %}
                            <option>{{ b.label }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="login">Account number</label>
                <input name="login" type="text" class="form-control" id="login" aria-describedby="emailHelp" placeholder="123456789l">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>


        {{ transactions | length }} imported
    </div>
{% endblock %}
